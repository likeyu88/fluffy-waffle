/* 重置默认样式 */
* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}

/* 设置全局字体 */
body {
  font-family: Arial, sans-serif;
  line-height: 1.6;
}

/* 头部样式 */
header {
  background-color: #333;
  color: #fff;
  padding: 20px;
}

header h1 {
  font-size: 24px;
}

/* 导航栏样式 */
nav ul {
  list-style: none;
  display: flex;
  justify-content: space-around;
}

nav a {
  color: #fff;
  text-decoration: none;
  padding: 10px;
}

nav a:hover {
  background-color: #555;
}

/* 主要内容区域样式 */
main {
  padding: 20px;
}

section {
  margin-bottom: 30px;
}

h2 {
  font-size: 20px;
  margin-bottom: 15px;
}

p {
  margin-bottom: 10px;
}

/* 图片样式 */
img {
  max-width: 100%;
  height: auto;
  margin-bottom: 15px;
}

/* 按钮样式 */
button {
  background-color: #007BFF;
  color: #fff;
  border: none;
  padding: 10px 20px;
  cursor: pointer;
}

button:hover {
  background-color: #0056b3;
}

/* 底部样式 */
footer {
  background-color: #333;
  color: #fff;
  padding: 20px;
  text-align: center;
}
